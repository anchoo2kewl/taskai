# Docker Compose for TaskAI ({{ env_name }})
# Architecture: linux/amd64

services:
  api:
    build:
      context: {{ app_dir }}/source/api
      dockerfile: Dockerfile
      platforms:
        - linux/amd64
    platform: linux/amd64
    container_name: {{ app_name }}-api
    environment:
      DB_PATH: /data/taskai.db
      JWT_SECRET: {{ jwt_secret }}
      PORT: 8080
      ENV: {{ env_name }}
      CORS_ALLOWED_ORIGINS: https://{{ domain }}
      LOG_LEVEL: {{ log_level }}
    ports:
      - "127.0.0.1:{{ api_host_port }}:8080"
    volumes:
      - {{ app_name }}-data:/data
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8080/api/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    networks:
      - {{ app_name }}-network

  web:
    build:
      context: {{ app_dir }}/source
      dockerfile: web/Dockerfile
      platforms:
        - linux/amd64
    platform: linux/amd64
    container_name: {{ app_name }}-web
    ports:
      - "127.0.0.1:{{ web_host_port }}:80"
    depends_on:
      api:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped
    networks:
      - {{ app_name }}-network

  mcp:
    build:
      context: {{ app_dir }}/source/mcp
      dockerfile: Dockerfile
      platforms:
        - linux/amd64
    platform: linux/amd64
    container_name: {{ app_name }}-mcp
    environment:
      TASKAI_API_URL: http://api:8080
      PORT: 3000
    ports:
      - "127.0.0.1:{{ mcp_host_port }}:3000"
    depends_on:
      api:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:3000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    restart: unless-stopped
    networks:
      - {{ app_name }}-network

volumes:
  {{ app_name }}-data:
    driver: local

networks:
  {{ app_name }}-network:
    driver: bridge
